{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "vite.config.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "types": ["jsdom", "vite/client"],
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "experimentalDecorators": true,
    "strict": true,
    "composite": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
